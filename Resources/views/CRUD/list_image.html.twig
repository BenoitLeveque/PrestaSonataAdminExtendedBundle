{% extends 'SonataAdminBundle:CRUD:base_list_field.html.twig' %}

{% block field%}
    {% if value is not null %}
        {% if (field_description.options.format is defined) %}
            {% media value, field_description.options.format %}
        {% else %}
            {% media value, 'admin_list' %}
        {% endif %}
    {% endif %}
{% endblock %}
